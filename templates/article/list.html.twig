{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

<h3>{{ controller_name }}<h3>

    <div class="row" style="float: right">
        <a href="{{ path('article_create') }}" class="btn btn-secondary" > Créer Article</a>
    </div>
    </br>
    <div class="row mt-5">
        <div class="col-sm-3">
            <h3>Nom article</h3>
        </div>
        <div class="col-sm-4">
        <h3>Description</h3>
        </div>
        <div class="col-sm-2">
        <h3>Prix</h3>
        </div>
        <div class="col-sm-3">
        <h3>Catégorie</h3>
        </div>

    </div>
    </br>

    {% for article in articles %}

        <div class="row">
            <div class="col-sm-3">
                {{ article.name }}
            </div>
            <div class="col-sm-4">
                {{ article.description }}
            </div>
            <div class="col-sm-2">
                {{ article.price }}
            </div>
            <div class="col-sm-3">
                {{ article.catalog.name }}
            </div>
        </div>
        </br>
        
    {% endfor %}


{% endblock %}
