{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

{% if not app.user %}


    </br>
    <div class="row mt-5">
        <div class="col-sm-2">
            <h3>Article</h3>
        </div>
        <div class="col-sm-6">
            <h3>Description</h3>
        </div>
        <div class="col-sm-3">
            <h3>Catégorie</h3>
        </div>
        <div class="col-sm-1">
            <h3>Prix</h3>
        </div>
    </div>
    </br>

    {% for article in articles %}

        <div class="row">
            <div class="col-sm-2" style="margin-top: 7px">
                <a href="{{ path('article_show', {'id' : article.id}) }}">{{ article.name }}</a>
            </div>
            <div class="col-sm-6" style="margin-top: 7px">
                {{ article.description }}
            </div>
            <div class="col-sm-3" style="margin-top: 7px">
                {{ article.catalog.name }}
            </div>
            <div class="col-sm-1" style="margin-top: 7px">
                {{ article.price }} €
            </div>
        </div>
        </br>
        
    {% endfor %}

{% else %}
        <div class="row" style="float: right">
        <a href="{{ path('article_create') }}" class="btn btn-secondary" > Créer Article</a>
    </div>
    </br>
    <div class="row mt-5">
        <div class="col-sm-2">
            <h3>Article</h3>
        </div>
        <div class="col-sm-3">
            <h3>Description</h3>
        </div>
        <div class="col-sm-2">
            <h3>Catégorie</h3>
        </div>
        <div class="col-sm-1">
            <h3>Prix</h3>
        </div>
        <div class="col-sm-3" style="text-align:center;">
            <h3>Actions</h3>
        </div>
    </div>
    </br>

    {% for article in articles %}

        <div class="row">
            <div class="col-sm-2" style="margin-top: 7px">
                <a href="{{ path('article_show', {'id' : article.id}) }}">{{ article.name }}</a>
            </div>
            <div class="col-sm-3" style="margin-top: 7px">
                {{ article.description }}
            </div>
            <div class="col-sm-2" style="margin-top: 7px">
                {{ article.catalog.name }}
            </div>
            <div class="col-sm-1" style="margin-top: 7px">
                {{ article.price }} €
            </div>
            <div class="col-sm-3" style="margin-left: 30px">
                <div class="row">
                    <div class="col-sm" style="margin-left: 10px">
                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary"> Editer</a>
                    </div>
                    <div class="col-sm" style="margin-right: 40px">
                        <a href="{{ path('article_delete', {'id': article.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ? \n ATTENTION, cette action est irréversible !')" class="btn btn-danger" > Supprimer</a>
                    </div>
                </div>
            </div>
        </div>
        </br>

    {% endfor %}

{% endif %}

{% endblock %}
