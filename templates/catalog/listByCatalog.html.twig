{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

    {% if not app.user %}
    
        <div class="row mt-5">
            <div class="col-sm-3 text-center">
                <h3>Nom</h3>
            </div>
            <div class="col-sm-9">
            <h3>Description</h3>
            </div>
        </div>
        </br>

        {% for catalog in catalogs %}

            <div class="row">
                <div class="col-sm-3 text-center" style="margin-top: 7px;">
                    <a href="{{ path('articles', {'id': catalog.id}) }}">{{catalog.name }}</a>
                </div>
                <div class="col-sm-9" style="margin-top: 7px">
                    <p> {{ catalog.description }} </p>
                </div>
            </div>
            </br>
            
        {% endfor %}


    {% else %}

        <div class="row" style="float: right">
        <a href="{{ path('catalog_create') }}" class="btn btn-secondary" > Créer catégorie</a>
        </div>
        </br>
        <div class="row mt-5">
            <div class="col-sm-2 text-center">
                <h3>Nom</h3>
            </div>
            <div class="col-sm-7">
            <h3>Description</h3>
            </div>
            <div class="col-sm-3 text-center">
            <h3>Actions</h3>
            </div>
        </div>
        </br>

        {% for catalog in catalogs %}

            <div class="row">
                <div class="col-sm-2 text-center" style="margin-top: 7px;">
                    <a href="{{ path('articles', {'id': catalog.id}) }}">{{catalog.name }}</a>
                </div>
                <div class="col-sm-7" style="margin-top: 7px">
                    <p> {{ catalog.description }} </p>
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm" style="margin-left: 20px">
                            <a href="{{ path('catalog_edit', {'id': catalog.id}) }}" class="btn btn-primary" > Editer</a>
                        </div>
                        <div class="col-sm" style="margin-right: 30px">
                            <a href="{{ path('catalog_delete', {'id': catalog.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ? \n ATTENTION, cette action est irréversible !')" class="btn btn-danger" > Supprimer</a>
                        </div>
                    </div>   
                </div>
            </div>
            </br>
            
        {% endfor %}
    {% endif %}
            
{% endblock %}
